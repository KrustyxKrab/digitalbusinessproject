---
/**
 * OptimizedImage Component
 * Uses Astro's built-in Image optimization for better performance
 * Automatically generates multiple formats (AVIF, WebP) and sizes
 */

interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  loading?: 'lazy' | 'eager';
  class?: string;
  quality?: number;
  format?: 'avif' | 'webp' | 'png' | 'jpg';
}

const {
  src,
  alt,
  width,
  height,
  loading = 'lazy',
  class: className = '',
  quality = 85,
  format = 'avif'
} = Astro.props;

// Note: For Astro Image component to work, images must be in src/ directory
// This component provides a consistent interface for image optimization
---

<!--
  For now, using standard img tag with optimization attributes
  In production, replace with Astro's Image component when images are available
-->
<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  class={className}
  decoding="async"
  style={`max-width: ${width}px; height: auto;`}
/>

<!--
  Production implementation with Astro Image:

  import { Image } from 'astro:assets';

  <Image
    src={import(`../../assets/images/${src}`)}
    alt={alt}
    width={width}
    height={height}
    loading={loading}
    format={format}
    quality={quality}
    densities={[1, 2]}
    class={className}
  />
-->
