---
interface Props {
  title: string;
  authors: string;
  journal: string;
  year: number;
  doi?: string;
  url?: string;
}

const { title, authors, journal, year, doi, url } = Astro.props;
---

<div class="study-reference bg-neutral-50 border-l-4 border-primary p-4 my-4 rounded-r-lg">
  <p class="text-sm font-medium text-neutral-900 mb-1">
    {title}
  </p>
  <p class="text-xs text-neutral-600">
    {authors}. <em>{journal}</em>, {year}.
    {doi && <span class="ml-2 font-mono text-neutral-500">DOI: {doi}</span>}
  </p>
  {url && (
    <a
      href={url}
      target="_blank"
      rel="noopener noreferrer"
      class="text-xs text-primary hover:text-primary-dark hover:underline mt-2 inline-block transition-colors"
    >
      Studie ansehen â†’
    </a>
  )}
</div>
