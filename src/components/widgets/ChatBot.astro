<style>
  /* Logik: Wenn der Container (#chatbot-widget) die Klasse 'is-open' hat,
   √§ndern wir die Eigenschaften des inneren Fensters (#chatbot-window).
  */
  #chatbot-widget.is-open #chatbot-window {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
    pointer-events: auto;
  }

  /* Mobile: Backdrop Animation */
  #chatbot-widget.is-open #chatbot-backdrop {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  /* Mobile: Sheet Animation von unten */
  @media (max-width: 639px) {
    #chatbot-widget.is-open #chatbot-window {
      transform: translateY(0);
    }

    /* Verstecke Toggle-Button wenn offen */
    #chatbot-widget.is-open #chatbot-toggle {
      opacity: 0;
      pointer-events: none;
    }
  }

  /* Safe area f√ºr iPhone Home-Indicator */
  .pb-safe {
    padding-bottom: max(0.75rem, env(safe-area-inset-bottom));
  }

  /* Support f√ºr den ToTop Button Shift */
  :global(#chatbot-widget.shift-left) {
    transform: translateX(-4rem);
  }
</style>

<script>
  let cleanupFn;

  function initChatbot() {
    // 1. Aufr√§umen
    if (cleanupFn) {
      cleanupFn();
      cleanupFn = null;
    }

    const widgetEl = document.getElementById('chatbot-widget');
    const toggleBtn = document.getElementById('chatbot-toggle');
    const closeBtn = document.getElementById('chatbot-close');
    const windowEl = document.getElementById('chatbot-window');
    const backdropEl = document.getElementById('chatbot-backdrop');

    if (!widgetEl || !toggleBtn) return;

    // 2. Funktionen
    const openChat = () => {
      widgetEl.classList.add('is-open');
      // Kleiner Timeout, damit der aktuelle Klick nicht sofort als "Klick au√üerhalb" gewertet wird
      setTimeout(() => {
        document.addEventListener('click', handleOutsideClick);
      }, 10);
    };

    const closeChat = () => {
      widgetEl.classList.remove('is-open');
      document.removeEventListener('click', handleOutsideClick);
    };

    const toggleChat = (e) => {
      e.preventDefault();
      e.stopPropagation();
      
      const isOpen = widgetEl.classList.contains('is-open');
      if (isOpen) {
        closeChat();
      } else {
        openChat();
      }
    };

    const handleOutsideClick = (e) => {
      // Wenn Klick NICHT im Widget ist, schlie√üen
      if (!widgetEl.contains(e.target)) {
        closeChat();
      }
    };

    // 3. Listener registrieren
    toggleBtn.addEventListener('click', toggleChat);
    if (closeBtn) closeBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      closeChat();
    });
    if (backdropEl) backdropEl.addEventListener('click', closeChat);

    // 4. Cleanup definieren
    cleanupFn = () => {
      toggleBtn.removeEventListener('click', toggleChat);
      document.removeEventListener('click', handleOutsideClick);
      // Optional: Close Button Listener m√ºsste man auch entfernen, 
      // aber bei Astro Page Swap werden eh die Elemente gel√∂scht.
    };
  }

  // Starten
  initChatbot();
  document.addEventListener('astro:page-load', initChatbot);
</script>