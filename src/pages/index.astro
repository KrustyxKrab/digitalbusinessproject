  <script>
    // FAQ Logic
    document.addEventListener('DOMContentLoaded', () => {
      const faqToggles = document.querySelectorAll('[data-faq-toggle]');
      faqToggles.forEach(toggle => {
        toggle.addEventListener('click', () => {
          const faqItem = toggle.closest('.faq-item');
          const answer = faqItem?.querySelector('.faq-answer') as HTMLElement;
          const chevron = faqItem?.querySelector('.faq-chevron') as HTMLElement;
          const isActive = faqItem?.classList.contains('active');

          // Reset all
          document.querySelectorAll('.faq-item.active').forEach(item => {
            if (item !== faqItem) {
              item.classList.remove('active');
              (item.querySelector('.faq-answer') as HTMLElement).style.maxHeight = '0';
              (item.querySelector('.faq-chevron') as HTMLElement).style.transform = 'rotate(0deg)';
            }
          });

          if (isActive) {
            faqItem?.classList.remove('active');
            if (answer) answer.style.maxHeight = '0';
            if (chevron) chevron.style.transform = 'rotate(0deg)';
          } else {
            faqItem?.classList.add('active');
            if (answer) answer.style.maxHeight = answer.scrollHeight + 'px';
            if (chevron) chevron.style.transform = 'rotate(180deg)';
          }
        });
      });

      // FAQ Search functionality
      const searchInput = document.querySelector('.space-y-3 input[type="text"]') as HTMLInputElement;
      const searchButton = searchInput?.nextElementSibling as HTMLButtonElement;

      function filterFAQs(searchTerm: string) {
        const faqItems = document.querySelectorAll('.faq-item');
        const normalizedSearch = searchTerm.toLowerCase().trim();

        if (!normalizedSearch) {
          // Show all items if search is empty
          faqItems.forEach(item => {
            (item as HTMLElement).style.display = 'block';
          });
          return;
        }

        let hasResults = false;
        faqItems.forEach(item => {
          const question = item.querySelector('.font-semibold')?.textContent?.toLowerCase() || '';
          const answer = item.querySelector('.faq-answer .px-5')?.textContent?.toLowerCase() || '';

          if (question.includes(normalizedSearch) || answer.includes(normalizedSearch)) {
            (item as HTMLElement).style.display = 'block';
            hasResults = true;
          } else {
            (item as HTMLElement).style.display = 'none';
          }
        });

        // Show message if no results
        const noResultsMsg = document.getElementById('faq-no-results');
        if (!hasResults && !noResultsMsg) {
          const msg = document.createElement('div');
          msg.id = 'faq-no-results';
          msg.className = 'text-center py-8 text-neutral-500';
          msg.innerHTML = `
            <p class="mb-2">Keine passenden Fragen gefunden.</p>
            <a href="/fragen" class="text-primary hover:text-primary-dark font-medium">
              Durchsuchen Sie alle FAQs ‚Üí
            </a>
          `;
          faqItems[0]?.parentElement?.appendChild(msg);
        } else if (hasResults && noResultsMsg) {
          noResultsMsg.remove();
        }
      }

      searchButton?.addEventListener('click', () => {
        filterFAQs(searchInput.value);
      });

      searchInput?.addEventListener('keyup', (e) => {
        if (e.key === 'Enter') {
          filterFAQs(searchInput.value);
        }
      });

      // Real-time search (optional, with debounce)
      let searchTimeout: NodeJS.Timeout;
      searchInput?.addEventListener('input', () => {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          filterFAQs(searchInput.value);
        }, 300);
      });
    });
  </script>

