          if (headline) headlineEl.textContent = headline;
          if (concern) subheadlineEl.textContent = `Ihr personalisierter Plan f√ºr ${concern} ‚Äì Wissenschaftlich fundiert.`;
        }
      } catch (error) {
        console.error('Hero personalization error:', error);
