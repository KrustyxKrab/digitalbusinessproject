  <script>
    // Personalization Logic (Existing)
    document.addEventListener('DOMContentLoaded', () => {
      try {
        const profileData = localStorage.getItem('elmex-user-profile');
        if (!profileData) return; 

        const profile = JSON.parse(profileData);
        const answersMap: Record<string, any> = {};
        if (profile.answers && Array.isArray(profile.answers)) {
          profile.answers.forEach((item: any) => {
            answersMap[item.questionId] = item.answer;
          });
        }

        const headlineEl = document.querySelector('[data-personalized="headline"]');
        const subheadlineEl = document.querySelector('[data-personalized="subheadline"]');

        if (headlineEl && subheadlineEl) {
          let headline = '';
          let concern = '';

          // Logic remains the same...
          if (answersMap.dentistFrequency === 'never' || answersMap.dentistFrequency === 'issues-only') {
            headline = 'Professionelle Beratung, jetzt digital'; // Slightly adapted text
            concern = 'Zahngesundheit';
          }
          else if (answersMap.childAge) {
            headline = 'Starke Zähne von Anfang an';
            concern = 'Kinderzähne';
          }
          else if (answersMap.dentalConcerns) {
            const concerns = Array.isArray(answersMap.dentalConcerns) ? answersMap.dentalConcerns : [answersMap.dentalConcerns];

            if (concerns.includes('sensitive-teeth')) {
              headline = 'Freiheit für schmerzempfindliche Zähne';
              concern = 'empfindliche Zähne';
            } else if (concerns.includes('cavity-protection')) {
              headline = 'Maximaler Kariesschutz für Sie';
              concern = 'Kariesschutz';
            } else if (concerns.includes('gum-health')) {
              headline = 'Starkes Zahnfleisch, gesunde Zähne';
              concern = 'Zahnfleischpflege';
            } else if (concerns.includes('whitening')) {
              headline = 'Natürliches Weiß, klinisch geschützt';
              concern = 'Zahnaufhellung';
            } else {
              headline = 'Ihr Weg zu gesunden Zähnen beginnt hier.';
              concern = 'Zahnpflege';
            }
          }
          
          if (headline) headlineEl.textContent = headline;
          if (concern) subheadlineEl.textContent = `Ihr personalisierter Plan für ${concern} – Wissenschaftlich fundiert.`;
        }
      } catch (error) {
        console.error('Hero personalization error:', error);
      }
    });
  </script>

