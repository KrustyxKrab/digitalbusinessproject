---
import Layout from "@/layouts/Layout.astro";
import { User, Calendar, ShoppingBag, Award, TrendingUp, Bell, Settings, Package } from '@lucide/astro';
---

<Layout
  title="Mein elmex Bereich | Dashboard"
  description="Ihr persönliches Zahnpflege-Dashboard - Verfolgen Sie Ihren Fortschritt, verwalten Sie Ihre Routine und Abonnements."
>
  <!-- Welcome Header -->
  <section class="bg-gradient-to-br from-primary/5 to-primary/10 py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h1 id="greeting" class="text-3xl md:text-4xl font-brand font-bold text-neutral-900 mb-2">
              Guten Tag!
            </h1>
            <p class="text-neutral-600">
              Hier ist Ihr persönliches Zahnpflege-Dashboard
            </p>
          </div>
          <button class="p-3 hover:bg-white/50 rounded-full transition-colors">
            <Bell class="w-6 h-6 text-neutral-600" />
          </button>
        </div>

        <!-- Health Score Card -->
        <div class="bg-white rounded-2xl p-6 md:p-8 shadow-lg">
          <div class="grid md:grid-cols-2 gap-8">
            <div class="text-center md:text-left">
              <h2 class="text-xl font-brand font-semibold text-neutral-900 mb-4">
                Ihr Zahngesundheits-Score
              </h2>
              <div class="flex items-center justify-center md:justify-start gap-6">
                <div class="relative inline-block">
                  <svg class="w-32 h-32 transform -rotate-90">
                    <circle
                      cx="64"
                      cy="64"
                      r="56"
                      stroke="currentColor"
                      stroke-width="8"
                      fill="none"
                      class="text-neutral-200"
                    />
                    <circle
                      id="score-circle"
                      cx="64"
                      cy="64"
                      r="56"
                      stroke="currentColor"
                      stroke-width="8"
                      fill="none"
                      stroke-dasharray="0 351.86"
                      class="text-primary transition-all duration-1000"
                    />
                  </svg>
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span id="health-score" class="text-4xl font-bold text-neutral-900">--</span>
                  </div>
                </div>
                <div>
                  <p id="score-message" class="text-neutral-600">
                    Laden Sie Ihr Profil...
                  </p>
                </div>
              </div>
            </div>
            <div class="flex flex-col justify-center space-y-3">
              <div class="flex items-center gap-3 p-3 bg-neutral-50 rounded-xl">
                <TrendingUp class="w-5 h-5 text-primary flex-shrink-0" />
                <div>
                  <p class="text-sm font-semibold text-neutral-900">Verbesserung</p>
                  <p class="text-xs text-neutral-600">+5 Punkte diese Woche</p>
                </div>
              </div>
              <div class="flex items-center gap-3 p-3 bg-neutral-50 rounded-xl">
                <Calendar class="w-5 h-5 text-primary flex-shrink-0" />
                <div>
                  <p class="text-sm font-semibold text-neutral-900" id="streak">Streak</p>
                  <p class="text-xs text-neutral-600">Tage in Folge</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Dashboard Content -->
  <section class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-3 gap-6">

        <!-- Daily Routine Card -->
        <div class="md:col-span-2 bg-white rounded-2xl p-6 shadow-lg">
          <div class="flex items-center justify-between mb-6">
            <h3 class="text-2xl font-brand font-bold text-neutral-900">
              Ihre tägliche Routine
            </h3>
            <a href="/routine-builder" class="text-sm text-primary hover:underline">
              Routine anpassen →
            </a>
          </div>

          <!-- Morning Routine -->
          <div class="mb-6">
            <h4 class="font-semibold text-neutral-900 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5 text-yellow-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              Morgenroutine
            </h4>
            <div class="space-y-2" id="morning-routine">
              <!-- Populated by JavaScript -->
            </div>
          </div>

          <!-- Evening Routine -->
          <div>
            <h4 class="font-semibold text-neutral-900 mb-3 flex items-center gap-2">
              <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
              </svg>
              Abendroutine
            </h4>
            <div class="space-y-2" id="evening-routine">
              <!-- Populated by JavaScript -->
            </div>
          </div>

          <div class="mt-6 pt-6 border-t border-neutral-200">
            <button id="complete-routine" class="w-full px-6 py-3 bg-primary text-white rounded-full hover:bg-primary-dark transition-colors font-medium">
              Routine als erledigt markieren
            </button>
          </div>
        </div>

        <!-- Quick Actions Sidebar -->
        <div class="space-y-6">
          <!-- Subscription Card -->
          <div class="bg-white rounded-2xl p-6 shadow-lg">
            <div class="flex items-center gap-2 mb-4">
              <Package class="w-5 h-5 text-primary" />
              <h3 class="font-brand font-semibold text-neutral-900">
                Ihr Abo
              </h3>
            </div>
            <div id="subscription-status" class="space-y-3">
              <p class="text-sm text-neutral-600">Kein aktives Abonnement</p>
              <a
                href="/subscription"
                class="block w-full px-4 py-2 bg-primary/10 text-primary rounded-full hover:bg-primary/20 transition-colors text-center text-sm font-medium"
              >
                Abo einrichten
              </a>
            </div>
          </div>

          <!-- Product Recommendations -->
          <div class="bg-white rounded-2xl p-6 shadow-lg">
            <div class="flex items-center gap-2 mb-4">
              <ShoppingBag class="w-5 h-5 text-primary" />
              <h3 class="font-brand font-semibold text-neutral-900">
                Empfehlungen
              </h3>
            </div>
            <div id="quick-recommendations" class="space-y-3">
              <!-- Populated by JavaScript -->
            </div>
          </div>

          <!-- Achievements -->
          <div class="bg-white rounded-2xl p-6 shadow-lg">
            <div class="flex items-center gap-2 mb-4">
              <Award class="w-5 h-5 text-primary" />
              <h3 class="font-brand font-semibold text-neutral-900">
                Erfolge
              </h3>
            </div>
            <div id="achievements" class="space-y-2">
              <!-- Populated by JavaScript -->
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Features -->
      <div class="grid md:grid-cols-2 gap-6 mt-6">
        <!-- Reminders -->
        <div class="bg-white rounded-2xl p-6 shadow-lg">
          <h3 class="text-xl font-brand font-semibold text-neutral-900 mb-4">
            Erinnerungen
          </h3>
          <div id="reminders-list" class="space-y-3">
            <!-- Populated by JavaScript -->
          </div>
        </div>

        <!-- Usage Stats -->
        <div class="bg-white rounded-2xl p-6 shadow-lg">
          <h3 class="text-xl font-brand font-semibold text-neutral-900 mb-4">
            Ihre Produkte
          </h3>
          <div id="product-usage" class="space-y-3">
            <!-- Populated by JavaScript -->
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Dashboard functionality
  interface UserProfile {
    quizCompleted: boolean;
    completedAt?: string;
    answers?: any[];
    dentalIssues?: string[];
    healthScore?: number;
  }

  interface RoutineStep {
    id: string;
    action: string;
    completed: boolean;
    product?: string;
  }

  // Time-based greeting
  function getGreeting(): string {
    const hour = new Date().getHours();
    if (hour >= 5 && hour < 12) return 'Guten Morgen!';
    if (hour >= 12 && hour < 18) return 'Guten Tag!';
    if (hour >= 18 && hour < 22) return 'Guten Abend!';
    return 'Hallo!';
  }

  // Load user profile
  function loadUserProfile(): UserProfile | null {
    const profileData = localStorage.getItem('elmex-user-profile');
    if (profileData) {
      return JSON.parse(profileData);
    }
    return null;
  }

  // Initialize dashboard
  document.addEventListener('DOMContentLoaded', () => {
    const profile = loadUserProfile();

    // Update greeting
    const greetingEl = document.getElementById('greeting');
    if (greetingEl) {
      greetingEl.textContent = getGreeting();
    }

    // If no profile, show modal
    if (!profile) {
      showOnboardingModal();
      return;
    }

    function showOnboardingModal() {
      const modal = document.createElement('div');
      modal.id = 'onboarding-modal';
      modal.className = 'fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center p-4 z-50 animate-fade-in';
      modal.innerHTML = `
        <div class="bg-white rounded-2xl p-8 text-center shadow-2xl animate-slide-up" onclick="event.stopPropagation()">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <h2 class="text-2xl font-brand font-bold text-neutral-900 mb-4">
            Willkommen bei elmex!
          </h2>
          <p class="text-neutral-600 mb-6">
            Um Ihr Dashboard zu nutzen, erstellen Sie bitte zuerst Ihr persönliches Profil. Das dauert nur 2 Minuten.
          </p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a
              href="/onboarding"
              class="inline-block px-8 py-3 bg-primary text-white rounded-full hover:bg-primary-dark transition-colors font-medium"
            >
              Profil erstellen
            </a>
            <button
              id="close-modal-btn"
              class="inline-block px-8 py-3 bg-neutral-100 text-neutral-700 rounded-full hover:bg-neutral-200 transition-colors font-medium"
            >
              Später
            </button>
          </div>
        </div>
      `;

      document.body.appendChild(modal);

      // Prevent body scrolling
      document.body.style.overflow = 'hidden';

      // Close modal function
      function closeModal() {
        modal.classList.add('animate-fade-out');
        setTimeout(() => {
          modal.remove();
          document.body.style.overflow = '';
        }, 200);
      }

      // Click outside to close
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          closeModal();
        }
      });

      // Close button
      const closeBtn = modal.querySelector('#close-modal-btn');
      closeBtn?.addEventListener('click', closeModal);

      // Escape key to close
      function handleEscape(e: KeyboardEvent) {
        if (e.key === 'Escape') {
          closeModal();
          document.removeEventListener('keydown', handleEscape);
        }
      }
      document.addEventListener('keydown', handleEscape);
    }

    // Display health score
    const healthScore = profile.healthScore || 75;
    const scoreEl = document.getElementById('health-score');
    const scoreCircle = document.getElementById('score-circle');
    const scoreMessage = document.getElementById('score-message');

    if (scoreEl && scoreCircle && scoreMessage) {
      scoreEl.textContent = healthScore.toString();
      const circumference = 351.86;
      const offset = circumference - (healthScore / 100) * circumference;
      scoreCircle.setAttribute('stroke-dasharray', `${circumference - offset} ${circumference}`);

      if (healthScore >= 90) {
        scoreMessage.textContent = 'Ausgezeichnet! Sie haben eine hervorragende Zahnpflege-Routine.';
      } else if (healthScore >= 70) {
        scoreMessage.textContent = 'Gut! Mit ein paar Optimierungen wird es noch besser.';
      } else {
        scoreMessage.textContent = 'Lass uns gemeinsam Ihre Zahnpflege verbessern!';
      }
    }

    // Load routine
    loadRoutine();

    // Load recommendations
    loadRecommendations();

    // Load achievements
    loadAchievements();

    // Load subscription status
    loadSubscriptionStatus();

    // Load reminders
    loadReminders();

    // Load product usage
    loadProductUsage();

    // Complete routine button
    document.getElementById('complete-routine')?.addEventListener('click', () => {
      const today = new Date().toDateString();
      const morningSteps = Array.from(document.querySelectorAll('#morning-routine input[type="checkbox"]:checked'))
        .map(el => el.id);
      const eveningSteps = Array.from(document.querySelectorAll('#evening-routine input[type="checkbox"]:checked'))
        .map(el => el.id);

      // Save completion data
      const completionData = {
        date: today,
        morning: morningSteps,
        evening: eveningSteps
      };
      localStorage.setItem('elmex-routine-completion', JSON.stringify(completionData));

      // Show success feedback
      const btn = document.getElementById('complete-routine');
      if (btn) {
        const originalText = btn.innerHTML;
        btn.innerHTML = `
          <svg class="w-5 h-5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Erledigt!
        `;
        btn.classList.add('bg-green-600');
        btn.classList.remove('bg-primary');

        setTimeout(() => {
          btn.innerHTML = originalText;
          btn.classList.remove('bg-green-600');
          btn.classList.add('bg-primary');
        }, 2000);
      }
    });
  });

  function loadRoutine() {
    // Load routine from localStorage (created in routine-builder)
    const savedRoutine = localStorage.getItem('elmex-routine');
    let morningRoutine: RoutineStep[] = [];
    let eveningRoutine: RoutineStep[] = [];

    if (savedRoutine) {
      const routine = JSON.parse(savedRoutine);
      morningRoutine = routine.morning.map((step: any) => ({
        ...step,
        completed: false
      }));
      eveningRoutine = routine.evening.map((step: any) => ({
        ...step,
        completed: false
      }));
    } else {
      // Default routine if none exists
      morningRoutine = [
        { id: '1', action: 'Zähne putzen', completed: false, product: 'elmex KARIESSCHUTZ' },
        { id: '2', action: 'Zahnseide verwenden', completed: false },
        { id: '3', action: 'Mundspülung', completed: false, product: 'elmex Mundspülung' }
      ];

      eveningRoutine = [
        { id: '4', action: 'Zähne putzen', completed: false, product: 'elmex KARIESSCHUTZ' },
        { id: '5', action: 'Zahnseide verwenden', completed: false },
        { id: '6', action: 'Mundspülung', completed: false, product: 'elmex SENSITIVE' }
      ];
    }

    // Check today's completion status
    const today = new Date().toDateString();
    const completionData = localStorage.getItem('elmex-routine-completion');
    if (completionData) {
      const completion = JSON.parse(completionData);
      if (completion.date === today) {
        // Mark steps as completed based on today's data
        morningRoutine.forEach(step => {
          if (completion.morning.includes(step.id)) {
            step.completed = true;
          }
        });
        eveningRoutine.forEach(step => {
          if (completion.evening.includes(step.id)) {
            step.completed = true;
          }
        });
      }
    }

    renderRoutine('morning-routine', morningRoutine);
    renderRoutine('evening-routine', eveningRoutine);
  }

  function renderRoutine(containerId: string, steps: RoutineStep[]) {
    const container = document.getElementById(containerId);
    if (!container) return;

    container.innerHTML = steps.map(step => `
      <div class="flex items-center gap-3 p-3 bg-neutral-50 rounded-xl">
        <input
          type="checkbox"
          id="${step.id}"
          class="w-5 h-5 text-primary focus:ring-primary rounded"
          ${step.completed ? 'checked' : ''}
        />
        <label for="${step.id}" class="flex-1">
          <span class="text-neutral-900">${step.action}</span>
          ${step.product ? `<span class="text-xs text-neutral-500 block">${step.product}</span>` : ''}
        </label>
      </div>
    `).join('');
  }

  function loadRecommendations() {
    const container = document.getElementById('quick-recommendations');
    if (!container) return;

    const recommendations = [
      { name: 'elmex KARIESSCHUTZ', url: '/produkte/kariesschutz-zahnpasta', stock: 'Auf Lager' },
      { name: 'elmex SENSITIVE', url: '/produkte/sensitive-zahnpasta', stock: 'Auf Lager' }
    ];

    container.innerHTML = recommendations.map(rec => `
      <a href="${rec.url}" class="block p-3 bg-neutral-50 rounded-xl hover:bg-neutral-100 transition-colors">
        <p class="text-sm font-semibold text-neutral-900">${rec.name}</p>
        <p class="text-xs text-neutral-600">${rec.stock}</p>
      </a>
    `).join('');
  }

  function loadAchievements() {
    const container = document.getElementById('achievements');
    if (!container) return;

    const achievementIcons: Record<string, string> = {
      'fire': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.5-7 .5 1.5 2 2.5 4 2.5 2.5 0 4.5 1.5 5 4.5.5 3-1 4.5-3 5.5z"></path></svg>',
      'graduation': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path></svg>',
      'star': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path></svg>'
    };

    const achievements = [
      { title: '7-Tage-Streak', icon: 'fire', unlocked: true },
      { title: 'Quiz-Meister', icon: 'graduation', unlocked: true },
      { title: '30-Tage-Streak', icon: 'star', unlocked: false }
    ];

    container.innerHTML = achievements.map(achievement => `
      <div class="flex items-center gap-3 p-2">
        <span class="${achievement.unlocked ? 'text-primary' : 'text-neutral-400'}">${achievementIcons[achievement.icon]}</span>
        <span class="text-sm ${achievement.unlocked ? 'text-neutral-900' : 'text-neutral-400'}">${achievement.title}</span>
      </div>
    `).join('');
  }

  function loadReminders() {
    const container = document.getElementById('reminders-list');
    if (!container) return;

    const reminderIcons: Record<string, string> = {
      'brush': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>',
      'tooth': '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>'
    };

    const reminders = [
      { title: 'Zahnbürste wechseln', date: 'In 14 Tagen', icon: 'brush' },
      { title: 'Zahnarzttermin', date: 'Nächsten Monat', icon: 'tooth' }
    ];

    container.innerHTML = reminders.map(reminder => `
      <div class="flex items-center gap-3 p-3 bg-neutral-50 rounded-xl">
        <span class="text-primary">${reminderIcons[reminder.icon]}</span>
        <div class="flex-1">
          <p class="text-sm font-semibold text-neutral-900">${reminder.title}</p>
          <p class="text-xs text-neutral-600">${reminder.date}</p>
        </div>
      </div>
    `).join('');
  }

  function loadProductUsage() {
    const container = document.getElementById('product-usage');
    if (!container) return;

    const products = [
      { name: 'elmex KARIESSCHUTZ', usage: 65, nextOrder: '12 Tage' }
    ];

    container.innerHTML = products.map(product => `
      <div class="p-3 bg-neutral-50 rounded-xl">
        <p class="text-sm font-semibold text-neutral-900 mb-2">${product.name}</p>
        <div class="progress-bar mb-2">
          <div class="progress-fill" style="width: ${product.usage}%"></div>
        </div>
        <p class="text-xs text-neutral-600">Nächste Bestellung in ${product.nextOrder}</p>
      </div>
    `).join('');
  }

  function loadSubscriptionStatus() {
    const container = document.getElementById('subscription-status');
    if (!container) return;

    const subscriptionData = localStorage.getItem('elmex-subscription');
    if (!subscriptionData) {
      container.innerHTML = `
        <p class="text-sm text-neutral-600">Kein aktives Abonnement</p>
        <a
          href="/subscription"
          class="block w-full px-4 py-2 bg-primary/10 text-primary rounded-full hover:bg-primary/20 transition-colors text-center text-sm font-medium"
        >
          Abo einrichten
        </a>
      `;
      return;
    }

    const subscription = JSON.parse(subscriptionData);
    if (!subscription.active) {
      container.innerHTML = `
        <p class="text-sm text-neutral-600">Kein aktives Abonnement</p>
        <a
          href="/subscription"
          class="block w-full px-4 py-2 bg-primary/10 text-primary rounded-full hover:bg-primary/20 transition-colors text-center text-sm font-medium"
        >
          Abo einrichten
        </a>
      `;
      return;
    }

    // Calculate days until next delivery
    const nextDate = new Date(subscription.nextDelivery);
    const now = new Date();
    const daysRemaining = Math.ceil((nextDate.getTime() - now.getTime()) / (1000 * 60 * 60 * 24));

    const statusText = subscription.paused ? 'Pausiert' : 'Aktiv';
    const statusColor = subscription.paused ? 'text-amber-600' : 'text-green-600';

    container.innerHTML = `
      <div class="flex items-center gap-2 mb-2">
        <div class="w-2 h-2 ${subscription.paused ? 'bg-amber-600' : 'bg-green-600'} rounded-full ${subscription.paused ? '' : 'animate-pulse'}"></div>
        <span class="text-sm font-semibold ${statusColor}">${statusText}</span>
      </div>
      <p class="text-sm text-neutral-600 mb-3">
        ${subscription.paused ? 'Abonnement pausiert' : `Nächste Lieferung in ${daysRemaining} Tagen`}
      </p>
      <p class="text-xs text-neutral-600 mb-3">${subscription.products.length} Produkt(e) abonniert</p>
      <a
        href="/subscription"
        class="block w-full px-4 py-2 bg-primary/10 text-primary rounded-full hover:bg-primary/20 transition-colors text-center text-sm font-medium"
      >
        Verwalten
      </a>
    `;
  }
</script>
