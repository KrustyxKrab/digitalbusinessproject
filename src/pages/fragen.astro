<script>
  // FAQ Toggle Logic
  document.addEventListener('DOMContentLoaded', () => {
    const faqToggles = document.querySelectorAll('.faq-toggle');
    faqToggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const faqItem = toggle.closest('.faq-item');
        const answer = faqItem?.querySelector('.faq-answer') as HTMLElement;
        const chevron = faqItem?.querySelector('.faq-chevron') as HTMLElement;
        const isActive = faqItem?.classList.contains('active');

        if (isActive) {
          faqItem?.classList.remove('active');
          if (answer) answer.style.maxHeight = '0';
          if (chevron) chevron.style.transform = 'rotate(0deg)';
        } else {
          faqItem?.classList.add('active');
          if (answer) answer.style.maxHeight = answer.scrollHeight + 'px';
          if (chevron) chevron.style.transform = 'rotate(180deg)';
        }
      });
    });

    // Category Filter Logic
    const categoryFilters = document.querySelectorAll('.faq-category-filter');
    const faqItems = document.querySelectorAll('.faq-item');
    const noResults = document.getElementById('no-results');

    categoryFilters.forEach(filter => {
      filter.addEventListener('click', () => {
        const category = filter.getAttribute('data-category');

        // Update active state
        categoryFilters.forEach(f => {
          f.classList.remove('category-active', 'bg-primary', 'text-white', 'shadow-lg');
          f.classList.add('bg-white', 'text-neutral-700', 'border', 'border-neutral-200');
        });
        filter.classList.add('category-active', 'bg-primary', 'text-white', 'shadow-lg');
        filter.classList.remove('bg-white', 'text-neutral-700', 'border', 'border-neutral-200');

        // Filter items
        let hasResults = false;
        faqItems.forEach(item => {
          const itemCategories = item.getAttribute('data-category') || '';
          if (category === 'all' || itemCategories.includes(category)) {
            (item as HTMLElement).style.display = 'block';
            hasResults = true;
          } else {
            (item as HTMLElement).style.display = 'none';
          }
        });

        // Toggle no results message
        if (noResults) {
          if (hasResults) {
            noResults.classList.add('hidden');
          } else {
            noResults.classList.remove('hidden');
          }
        }
      });
    });

    // Search Logic
    const searchInput = document.getElementById('faq-search') as HTMLInputElement;
    const searchBtn = document.getElementById('faq-search-btn');

    function performSearch() {
      const searchTerm = searchInput.value.toLowerCase().trim();

      if (!searchTerm) {
        faqItems.forEach(item => {
          (item as HTMLElement).style.display = 'block';
        });
        if (noResults) noResults.classList.add('hidden');
        return;
      }

      let hasResults = false;
      faqItems.forEach(item => {
        const question = item.querySelector('.font-semibold')?.textContent?.toLowerCase() || '';
        const answer = item.querySelector('.faq-answer .px-5')?.textContent?.toLowerCase() || '';

        if (question.includes(searchTerm) || answer.includes(searchTerm)) {
          (item as HTMLElement).style.display = 'block';
          hasResults = true;
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });

      if (noResults) {
        if (hasResults) {
          noResults.classList.add('hidden');
        } else {
          noResults.classList.remove('hidden');
        }
      }
    }

    searchBtn?.addEventListener('click', performSearch);
    searchInput?.addEventListener('keyup', (e) => {
      if (e.key === 'Enter') {
        performSearch();
      }
    });

    // Real-time search with debounce
    let searchTimeout: NodeJS.Timeout;
    searchInput?.addEventListener('input', () => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(performSearch, 300);
    });

    // Chatbot triggers (dummy)
    const chatbotButtons = [
      document.getElementById('open-chatbot'),
      document.getElementById('open-chatbot-noresults')
    ];

    chatbotButtons.forEach(btn => {
      btn?.addEventListener('click', () => {
        alert('KI-Assistent (Demo): Diese Funktion ist in Entwicklung. Nutzen Sie vorerst die FAQ-Suche oder kontaktieren Sie unseren Kundenservice.');
      });
    });
  });
</script>

