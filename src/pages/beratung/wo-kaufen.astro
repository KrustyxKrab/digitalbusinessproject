<style>
  .filter-btn {
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 2px solid #D4D4D4;
    color: #525252;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .filter-btn:hover {
    border-color: #FF6000;
    color: #FF6000;
  }

  .filter-btn.active {
    background-color: #FF6000;
    color: white;
    border-color: #FF6000;
  }

  .retailer-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .retailer-card:hover {
    transform: translateY(-4px);
  }
</style>

<script>
  // Category filtering
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const retailerCards = document.querySelectorAll('.retailer-card');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', function(this: HTMLElement) {
        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        this.classList.add('active');

        // Filter retailers
        const filter = this.getAttribute('data-filter');

        retailerCards.forEach(card => {
          const cardType = card.getAttribute('data-type');
          const htmlCard = card as HTMLElement;

          if (filter === 'all' || cardType === filter) {
            htmlCard.style.display = 'block';
            setTimeout(() => {
              htmlCard.style.opacity = '1';
              htmlCard.style.transform = 'translateY(0)';
            }, 10);
          } else {
            htmlCard.style.opacity = '0';
            htmlCard.style.transform = 'translateY(10px)';
            setTimeout(() => {
              htmlCard.style.display = 'none';
            }, 300);
          }
        });
      });
    });

    // Store Locator Functionality
    const storeLocatorForm = document.getElementById('store-locator-form');
    const locationInput = document.getElementById('location-input') as HTMLInputElement;
    const locationResults = document.getElementById('location-results');
    const resultsContainer = document.getElementById('results-container');

    storeLocatorForm?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const location = locationInput.value.trim();

      if (!location) {
        alert('Bitte geben Sie eine Postleitzahl oder einen Ort ein');
        return;
      }

      // Show loading state
      if (resultsContainer) {
        resultsContainer.innerHTML = '<p class="text-neutral-600">Suche nach Gesch√§ften...</p>';
      }
      locationResults?.classList.remove('hidden');

      // Simulate API call (in real implementation, would call Google Places API or similar)
      setTimeout(() => {
        // Mock results
        const mockStores = [
          { name: 'dm-drogerie markt', address: 'Hauptstra√üe 123, ' + location, distance: '0.5 km', url: 'https://www.dm.de' },
          { name: 'Rossmann', address: 'Bahnhofstra√üe 45, ' + location, distance: '1.2 km', url: 'https://www.rossmann.de' },
          { name: 'M√ºller', address: 'Marktplatz 7, ' + location, distance: '1.8 km', url: 'https://www.mueller.de' }
        ];

        if (resultsContainer) {
          resultsContainer.innerHTML = mockStores.map(store => `
            <div class="bg-white rounded-lg p-4 border border-neutral-200 flex items-start justify-between gap-4">
              <div class="flex-1">
                <h4 class="font-semibold text-neutral-900">${store.name}</h4>
                <p class="text-sm text-neutral-600 mt-1">${store.address}</p>
                <p class="text-xs text-primary font-medium mt-2">üìç ${store.distance} entfernt</p>
              </div>
              <a
                href="${store.url}"
                target="_blank"
                rel="noopener noreferrer"
                class="flex-shrink-0 px-4 py-2 text-sm font-medium text-primary border-2 border-primary hover:bg-primary hover:text-white transition-colors rounded-lg"
              >
                Details
              </a>
            </div>
          `).join('');
        }

        // Track search
        if (typeof gtag !== 'undefined') {
          gtag('event', 'store_locator_search', {
            'search_term': location
          });
        }
      }, 1000);
    });

    // Get product from URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const product = urlParams.get('product');

    if (product) {
      // Highlight that user is looking for a specific product
      const heroSection = document.querySelector('.max-w-4xl.mx-auto.text-center.mb-16 p');
      if (heroSection) {
        heroSection.innerHTML = `Sie suchen nach: <strong class="text-primary">${decodeURIComponent(product)}</strong><br>Hier finden Sie alle H√§ndler:`;
      }
    }
  });
</script>
